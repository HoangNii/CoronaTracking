<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#313131"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_time"
                android:layout_margin="10dp"
                android:layout_gravity="end"
                android:textColor="#ABFFFFFF"
                android:text="Update last 20:30 16/2/2020"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="SmallSp" />
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#444444"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#D8ECECEC"
                            android:gravity="center"
                            android:text="Confirmed"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="#D8ECECEC"
                            android:gravity="center"
                            android:text="Deaths"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="#D8ECECEC"
                            android:gravity="center"
                            android:text="Recovered"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_confirmed"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#DD2C00"
                            android:gravity="center"
                            android:text="---"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_deaths"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#74ECECEC"
                            android:gravity="center"
                            android:text="---"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_recovered"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#00BB4D"
                            android:gravity="center"
                            android:text="---"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#D8ECECEC"
                            android:gravity="center"
                            android:text="Number of Countries"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="#BCECECEC"
                            android:gravity="center"
                            android:text="Deaths Percentage"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="#D8ECECEC"
                            android:gravity="center"
                            android:text="Recovered Percentage"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_country"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#DD2C00"
                            android:gravity="center"
                            android:text="---"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_percentage_death"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#74ECECEC"
                            android:gravity="center"
                            android:text="---"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_percentage_recover"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#00BB4D"
                            android:gravity="center"
                            android:text="---"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:padding="10dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                android:id="@+id/adLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#444444"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/native_ads_admob"/>
                    <include layout="@layout/native_ads_facebook"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                app:cardBackgroundColor="#444444"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.github.mikephil.charting.charts.LineChart
                    android:layout_margin="5dp"
                    android:id="@+id/line_chart"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:cardBackgroundColor="#424242"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:focusable="true">
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_weight="4"
                        android:textColor="#D8ECECEC"
                        android:text="Country/Region"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:src="@drawable/ic_virus"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:src="@drawable/ic_death"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:tint="#00BB4D"
                        android:src="@drawable/ic_hospital"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:tint="#656666"
                        android:visibility="invisible"
                        android:padding="5dp"
                        android:src="@drawable/ic_arrow_right"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="#424242"
                android:layout_marginBottom="50dp"
                android:id="@+id/rcv_countries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:visibility="gone"
        android:background="#313131"
        android:id="@+id/view_load_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:indeterminate="true"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </FrameLayout>
</FrameLayout>